{
  "manifest_version": 3,
  "name": "Add to Things for Gmail",
  "short_name": "Things",
  "version": "2.0.0",
  "description": "Adds a button to Gmail threads to add them to Things, including a link to the message.",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "dist/index.js"
      ]
    }
  ],
  "icons": {
    "128": "resources/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/index.js",
        "resources/**"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}